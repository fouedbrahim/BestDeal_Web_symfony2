 {% for  deal in deals %}
<div class="col_1_of_3 span_1_of_3">    
    <a href="{{path('best_deal_detail',{'id':deal.idProduit})}}">
        <div class="inner_content clearfix">
            <div class="product_image">
                <img src="{{ asset(deal.afficheProduit)}}" alt=""/>
            </div>
            <div class="sale-box"><span class="on_sale title_shop">{{deal.categorie}}</span></div>	
            <div class="price">
                <div class="cart-left">
                    <p class="title">{{deal.nomProduit}}</p>
                    <div class="price1">
                        <span class="actual">{{deal.prixSolde}} D.T</span>
                    </div>
                </div>
                <div class="cart-right"> </div>
                <div class="clear"></div>
            </div>				
        </div>
    </a>
</div>
{%endfor%} 