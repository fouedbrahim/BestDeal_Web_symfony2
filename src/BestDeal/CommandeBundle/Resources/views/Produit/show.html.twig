{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Produit</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Nomproduit</th>
                <td>{{ entity.nomProduit }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ entity.categorie }}</td>
            </tr>
            <tr>
                <th>Prixprimaire</th>
                <td>{{ entity.prixPrimaire }}</td>
            </tr>
            <tr>
                <th>Prixsolde</th>
                <td>{{ entity.prixSolde }}</td>
            </tr>
            <tr>
                <th>Qteproduit</th>
                <td>{{ entity.qteProduit }}</td>
            </tr>
            <tr>
                <th>Datepromotion</th>
                <td>{{ entity.datePromotion|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Afficheproduit</th>
                <td>{{ entity.afficheProduit }}</td>
            </tr>
            <tr>
                <th>Videopublicitaire</th>
                <td>{{ entity.videoPublicitaire }}</td>
            </tr>
            <tr>
                <th>Idprestataire</th>
                <td>{{ entity.idPrestataire }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('produit') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('produit_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
